#!/usr/bin/make -f

export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@ --with=gir,python3

override_dh_auto_configure:
	dh_auto_configure -- \
 	-Dpnp-ids-path=/usr/share/hwdata/pnp.ids \
 	-Ddeprecation-flags=false

override_dh_strip:
	dh_strip --dbgsym-migration='libcinnamon-desktop-dbg (<< 3.0.1-1~)' || dh_strip

